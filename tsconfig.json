{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./",
    "rootDir": "./",
    "baseUrl": "./",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": ["*.ts", "*.js"],
  "exclude": ["node_modules", "dist", "cache", "artifacts", "deployments"]
}
